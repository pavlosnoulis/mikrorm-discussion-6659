{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  }
}
